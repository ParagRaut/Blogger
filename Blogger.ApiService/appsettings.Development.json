{
  "ConnectionStrings": {
    "Database": "Host=database;Port=5432;Database=posts;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "cache"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}